.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.yearContainer {
  width: 100%;
  height: 150rpx;
  background-color: #c8dfe7;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.btnLeft {
  width: 65px;
  height: 45px;
  background: none;
  display: flex;
  align-items: center;
  margin-left: 50rpx;
}

